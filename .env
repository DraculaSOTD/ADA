# Environment Configuration
ENVIRONMENT=development

# Use SQLite for development (no external database needed)
USE_SQLITE=true
SQLITE_DB_PATH=./ada.db

# PostgreSQL (if USE_SQLITE=false)
DATABASE_URL=postgresql://ada_user:ada_password@localhost:5432/ada_db
POSTGRES_USER=ada_user
POSTGRES_PASSWORD=ada_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ada_db

# Redis (optional for development)
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=dev-secret-key-change-in-production-12345678
JWT_SECRET=dev-jwt-secret-change-in-production-87654321
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Email (optional for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@ada-platform.com

# Application Settings
APP_NAME=ADA Platform
APP_VERSION=1.0.0
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080
WORKERS=4
MAX_UPLOAD_SIZE=104857600  # 100MB

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_2FA=false
ENABLE_SOCIAL_AUTH=false
ENABLE_API_DOCS=true

# ML Settings
MAX_TRAINING_TIME=3600
MAX_MODEL_SIZE=1073741824  # 1GB
GPU_ENABLED=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/tmp/ada.log

