<div class="rules-engine-page">
    <div class="page-header">
        <h1 class="page-title">Rules Engine:</h1>
        <div class="form-group">
            <label for="rule-name">Rule Name:</label>
            <input type="text" id="rule-name" placeholder="TextField">
        </div>
    </div>
    <div class="info-banner">
        <span class="info-icon"><i class="fas fa-info-circle"></i></span>
        This is an explanation field
    </div>
    <div class="rules-container card">
        <div id="rules-list">
            <!-- Rules will be dynamically added here -->
        </div>
        <button id="add-rule-button" class="auth-button">+ Add Rule</button>
    </div>
    <div class="total-tokens-container card">
        <span>Total Token Cost:</span>
        <span id="total-token-cost">0</span>
    </div>
</div>
