# Environment Configuration
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://ada_user:ada_secure_password@localhost:5432/ada_db
POSTGRES_PASSWORD=ada_secure_password

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-very-secure-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_secure_password
MINIO_SECURE=false

# AWS (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=ada-storage

# Azure (optional)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=ada-storage

# Google Cloud (optional)
GOOGLE_APPLICATION_CREDENTIALS=
GCS_BUCKET=ada-storage

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@ada-platform.com

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
PROMETHEUS_ENDPOINT=http://localhost:9090

# Jupyter (development)
JUPYTER_TOKEN=jupyter_token

# Application Settings
APP_NAME=ADA Platform
APP_VERSION=1.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
WORKERS=4
MAX_UPLOAD_SIZE=104857600  # 100MB

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_2FA=true
ENABLE_SOCIAL_AUTH=false
ENABLE_API_DOCS=true

# ML Settings
MAX_TRAINING_TIME=3600
MAX_MODEL_SIZE=1073741824  # 1GB
GPU_ENABLED=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/data/logs/ada.log

# External APIs (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_TOKEN=